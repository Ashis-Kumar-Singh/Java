import java.utl.Arrays; 
public class ArrRev { 
    public static void reverse(String[] arr) { 
        int left = 0; 
        int right = arr.length - 1; 
        while (left < right) { 
            String temp = arr[le ]; 
            arr[left] = arr[right]; 
            arr[right] = temp; 
            left++; 
            right--; 
        } 
    } 
    public static void main(String[] args) { 
        String[] array1 = {"John", "Jammy", "Luke"}; 
        System.out.println("original array: " + Arrays.toString(array1)); 
        reverse(array1); 
        System.out.println("reversed array: " + Arrays.toString(array1)); 
         
        String[] array2 = {"John"}; 
        System.out.println("original array: " + Arrays.toString(array2)); 
        reverse(array2); 
        System.out.println("reversed array: " + Arrays.toString(array2)); 
    } 
} 
